- provide(:title, @user.name)
%div.row
  %aside.col-md-4
    %section.user_info
      %h1
        =gravatar_for @user
        = @user.name

  %div.col-md-8
    - if @user.microposts.any?
      %h3 Microposts (#{@user.microposts.count})
      %ol.microposts
        - @microposts.each do |micropost|
          = render 'users/post_list', micropost: micropost
        = will_paginate @microposts

